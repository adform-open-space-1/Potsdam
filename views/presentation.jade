extends layout

block content
  .ui-header.ui-bar-a
    a.ui-btn-left.ui-btn.ui-btn-up-a.ui-btn-icon-left.ui-btn-corner-all.ui-shadow(href="/")
      span.ui-btn-inner.ui-btn-corner-all
        span.ui-btn-text Home
        span.ui-icon.ui-icon-home.ui-icon-shadow
    h1.ui-title
      &nbsp;

  .ui-content
    h3.presenter
      img(src=presentation.Img
          width="50px"
          height="50px"
          alt=presentation.Presenter)
      span=presentation.Presenter
    p.clear=presentation.Topic

    .ui-field-contain.ui-body.ui-br
      label.ui-select Rating:
      select(data-native-menu="false")
        option(value=-1) Rate
        option(value=5) 5 - Great
        option(value=4) 4
        option(value=3) 3
        option(value=2) 2
        option(value=1) 1 - Poor
