extends layout

block content
  div(data-role="header")
    a(data-role="button"
      data-icon="arrow-l"
      data-direction="reverse"
      data-iconpos="notext"
      href="/") Back
    h1
      Feedback

  form(data-role="content"
       action="/feedback"
       method="post"
       data-ajax="false")

    h3(data-nav-title)
      img(src=presentation.Img
          width="50px"
          height="50px"
          alt=presentation.Presenter)
      span(style='margin-left:5px')=presentation.Presenter
    p.clear=presentation.Topic

    input(type="hidden"
          name="presenter"
          value=presentation.Url)

    div(data-role="fieldcontain")
      label(for=presentation.Url) Rating:
      select(id=presentation.Url
             name="rating"
             data-native-menu="false")
        option(value=-1) Rate
        option(value=5) 5 - Great
        option(value=4) 4
        option(value=3) 3
        option(value=2) 2
        option(value=1) 1 - Poor

    input(type="submit"
          value="Send"
          data-icon="check"
          data-theme="b"
          data-direction="reverse"
          data-nav-type="save"
          href="/")
