extends layout

block content
  div(data-role='header')
    a(data-role='button'
      data-icon='arrow-l'
      data-direction='reverse'
      data-iconpos='notext'
      href='/') Back
    h1
      Feedback

  form(data-role='content'
       action='/feedback'
       method='post'
       data-ajax='false')

    h3(data-nav-title)
      img(src=presentation.Img
          width='50px'
          height='50px'
          alt=presentation.Presenter)
      span(style='margin-left:5px')=presentation.Presenter
    p.clear=presentation.Topic

    input(type='hidden'
          name='presenter'
          value=presentation.Url)

    div(data-role='fieldcontain')
      label(for=presentation.Url) Rating:
      select(id=presentation.Url
             name='rating'
             data-native-menu='false')
        - var ratings = [ {i: -1, text: 'Rate'}, {i: 5, text: '5 - Great'}, {i: 4, text: '4'}, {i: 3, text: '3'}, {i: 2, text: '2'}, {i: 1, text: '1 - Poor'}]
        each item in ratings
          option(value=item.i
                 selected=feedback.rating == item.i)=item.text

    div(data-role='fieldcontain')
      label(for='comment') Comment:
      textarea(id='comment'
               name='comment')
        =feedback.comment

    input(type='submit'
          value='Send'
          data-icon='check'
          data-theme='b'
          data-direction='reverse'
          data-nav-type='save'
          href='/')
